{
	"name": "Rally Copilot",
	"description": "Automatizador de procesos en Rally.",
	"author": "Roger Rocho",
	"version": "1.0",
	"manifest_version": 2,
	"browser_action": {
		"default_popup": "index.html"
	},
	"permissions": [
		"activeTab",
		"executeScript",
		"scripting"
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"changeStatus.js",
				"sprintNumber.js"
			]
		}
	]
}